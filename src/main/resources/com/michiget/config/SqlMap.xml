<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap
	PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="UserInfo">
	<typeAlias alias="map" type="java.util.Map" />
	<typeAlias alias="str" type="java.lang.String" />
	<typeAlias alias="int" type="java.lang.Integer" />
	<typeAlias alias="userInfo" type="com.michiget.beans.UserInfo" />
	<typeAlias alias="board" type="com.michiget.beans.Board" />
	<typeAlias alias="emp" type="com.michiget.beans.Emp" />
	<typeAlias alias="dept" type="com.michiget.beans.Dept" />
	<typeAlias alias="salgrade" type="com.michiget.beans.Salgrade" />

	<select id="getMemberList" resultClass="userInfo">select * from MEMBER order by IDX desc</select>

	<select id="getBoardList" resultClass="board">select * from scott.board2 order by scott.board2."idx" desc</select>
	
	<select id="getContent" resultClass="board" parameterClass="int">select * from scott.board2 where scott.board2."idx" = #idx#</select>

	<select id="getEmpList" resultClass="emp">select * from emp</select>

	<select id="getDeptList" resultClass="dept">select * from dept</select>
	
	<select id="getSalgradeList" resultClass="salgrade">select * from salgrade</select>

	<insert id="insertMember" parameterClass="userInfo"> 
	<![CDATA[
		INSERT INTO MEMBER
			 (IDX, ID, PASS, NICK, EMAIL1, EMAIL2, GENDER, REGDATE, REGIP)
		 VALUES 
			 (member_seq.nextval, #id#, #pass#, #nick#, #email1#, #email2#, #gender#, sysdate, #regIp#)
	]]>
	</insert>

	<insert id="insertBoard" parameterClass="board"> 
	<![CDATA[
		INSERT INTO scott.board2
		 VALUES 
			 (board_seq.nextval, #title#, #writer#, #regdate#, 1, #content#)
	]]>
	</insert>
	
	<delete id="contentDelete" parameterClass="int">delete from scott.board2 where scott.board2."idx" = #idx#</delete>

	<select id="getLoginId" resultClass="userInfo" parameterClass="str">select ID,PASS,NICK from MEMBER where ID = #id#</select>
	
	

</sqlMap>
